            groups="hr.group_hr_manager"/>

    <record id="employee_information_report_paperformat"
            model="report.paperformat">
        <field name="name">Employee Information</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">50</field>
        <field name="margin_bottom">30</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">45</field>
        <field name="dpi">90</field>
    </record>

    <record id="employee_personal_info_report" model="ir.actions.report">
        <field name="paperformat_id" ref="employee_information_report_paperformat"/>
    </record>

