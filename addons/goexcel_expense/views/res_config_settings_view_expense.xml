<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_ocr_expense" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ocr.expense</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="4"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="OCR Expense" string="OCR Expense" data-key="hr_expense">
                    <h2>OCR Expense</h2>
                        <div class="col-12 col-lg-6 o_setting_box" >
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Hugging Face API Key</span>
                                <field name="api_key_expense_ocr"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
