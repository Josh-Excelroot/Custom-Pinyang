<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
		<record id="sh_res_config_settings_inherit" model="ir.ui.view">
			<field name="name">sh.res.config.settings.inherit</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@data-key='general_settings']" position="inside">
  				<h2>Enable Sticky View</h2>  				
			        <div class="row mt16 o_settings_container">			        
	                    <div class="col-xs-6 col-md-6 o_setting_box" >
	                        <div class="o_setting_left_pane">
	                        	<field name="enable_form_view_status_bar"/>                            
	                        </div>
	                        <div class="o_setting_right_pane">
	                            <label for="enable_form_view_status_bar"/>
	                            <div class="text-muted">
	                               Enable Form View Status Bar
	                            </div>
	                        </div>
	                    </div>
	                
	                		        
	                    <div class="col-xs-6 col-md-6 o_setting_box" >
	                        <div class="o_setting_left_pane">
	                        	<field name="enable_list_view_status_bar"/>                            
	                        </div>
	                        <div class="o_setting_right_pane">
	                            <label for="enable_list_view_status_bar"/>
	                            <div class="text-muted">
	                               Enable List View Header
	                            </div>
	                        </div>
	                    </div>
	                
	               	        
	                    <div class="col-xs-6 col-md-6 o_setting_box" attrs="{'invisible':[('enable_list_view_status_bar','=', False)]}">
	                        <div class="o_setting_left_pane">
	                        	<field name="enable_list_footer_view_status_bar"/>                            
	                        </div>
	                        <div class="o_setting_right_pane">
	                            <label for="enable_list_footer_view_status_bar"/>
	                            <div class="text-muted">
	                               Enable List view Footer
	                            </div>
	                        </div>
	                    </div>
	                    <div class="col-xs-6 col-md-6 o_setting_box">
	                        <div class="o_setting_left_pane">
	                        	<field name="enable_list_inside_form_view"/>                            
	                        </div>
	                        <div class="o_setting_right_pane">
	                            <label for="enable_list_inside_form_view"/>
	                            <div class="text-muted">
	                               Enable List inside Form View
	                            </div>
	                        </div>
	                    </div>
	                  <!--   <div class="col-xs-6 col-md-6 o_setting_box">
	                        <div class="o_setting_left_pane">
	                        	<field name="enable_pivot_header_view"/>                            
	                        </div>
	                        <div class="o_setting_right_pane">
	                            <label for="enable_pivot_header_view"/>
	                            <div class="text-muted">
	                               Enable Pivot header View
	                            </div>
	                        </div>
	                    </div> -->
	                    <div class="col-xs-6 col-md-6 o_setting_box">
	                        <div class="o_setting_left_pane">
	                        	<field name="enable_chatter_header_view"/>                            
	                        </div>
	                        <div class="o_setting_right_pane">
	                            <label for="enable_chatter_header_view"/>
	                            <div class="text-muted">
	                               Enable Chatter header View
	                            </div>
	                        </div>
	                    </div>
	                </div>        
				</xpath>				
			</field> 
		</record>
	</data>
</odoo>
                    