<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_ocr" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ocr</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="4"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="OCR" string="OCR" data-key="sci_goexcel_ocr_uniship">
                    <h2>OCR</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" >
                                <div class="o_setting_left_pane">
                                    <field name="ocr_use_first_page_only"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ocr_use_first_page_only"/>
                                    <div class="text-muted">
                                        OCR - Use First Page Only
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
